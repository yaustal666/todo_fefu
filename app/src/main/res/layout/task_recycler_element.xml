<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingTop="10dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/Update_task_button"
    android:background="@drawable/my_border2">

    <TextView
        android:id="@+id/t_recycler_element_title"
        android:layout_width="328dp"
        android:layout_height="27dp"
        android:text="Title"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/t_recycler_element_description"
        android:layout_width="328dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_recycler_element_title" />

    <TextView
        android:id="@+id/t_recycler_element_date"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:text="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/t_recycler_element_description" />

    <CheckBox
        android:id="@+id/is_task_favorite"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="124dp"
        android:scaleX="1.8"
        android:scaleY="1.8"
        style="?android:attr/starStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/t_recycler_element_date"
        app:layout_constraintTop_toBottomOf="@+id/t_recycler_element_description"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>